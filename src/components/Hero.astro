---

<section id="hero" class="min-h-screen flex flex-col items-center justify-center relative px-6 pt-16">
  <!-- Subtle gradient background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-[var(--color-accent)] opacity-10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500 opacity-10 rounded-full blur-3xl"></div>
  </div>
  
  <div class="relative z-10 text-center max-w-4xl mx-auto">
    <p class="text-[var(--color-text-muted)] text-sm uppercase tracking-widest mb-4 animate-fade-in opacity-0">
      Software Engineer
    </p>
    
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight mb-6 animate-fade-in opacity-0 delay-1">
      Mohan Kumar R
    </h1>
    
    <p class="text-xl md:text-2xl text-[var(--color-text-secondary)] mb-8 animate-fade-in opacity-0 delay-2">
      <span class="gradient-text font-medium">C++</span> · 
      <span class="gradient-text font-medium">Go</span> · 
      <span class="gradient-text font-medium">P2P</span> · 
      <span class="gradient-text font-medium">Cross-Platform</span>
    </p>
    
    <p class="text-lg text-[var(--color-text-muted)] max-w-2xl mx-auto mb-12 animate-fade-in opacity-0 delay-3">
      Building scalable distributed systems and peer-to-peer applications. 
      Passionate about clean code and performance optimization.
    </p>
    
    <div class="flex items-center justify-center gap-4 animate-fade-in opacity-0 delay-4">
      {socialLinks.map(link => (
        <a 
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="w-12 h-12 flex items-center justify-center rounded-full glass-card hover:bg-[var(--color-accent)] hover:border-[var(--color-accent)] transition-all duration-300 group"
          aria-label={link.label}
        >
          <span class="text-[var(--color-text-secondary)] group-hover:text-white transition-colors" set:html={link.icon} />
        </a>
      ))}
      
      <a 
        href={`${import.meta.env.BASE_URL}assets/resume.pdf`}
        class="ml-4 px-6 py-3 glass-card font-medium hover:bg-[var(--color-accent)] hover:border-[var(--color-accent)] hover:text-white transition-all duration-300"
      >
        Resume
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <a href="#about" class="text-[var(--color-text-muted)] hover:text-[var(--color-text-primary)] transition-colors">
      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>

<style>
  @keyframes bounce {
    0%, 100% { transform: translateY(0) translateX(-50%); }
    50% { transform: translateY(-10px) translateX(-50%); }
  }
  
  .animate-bounce {
    animation: bounce 2s ease-in-out infinite;
  }
</style>
